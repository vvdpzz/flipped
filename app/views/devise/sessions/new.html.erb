<div id="content" class="yui3-u-1">
	<div id="sign" class="box">
		<%= image_tag("/images/login.png") %>
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		  <div class="field">
		  	<%= f.text_field :email, :class => 'required email' %>
		  </div>
		  <div class="field">
		  	<%= f.password_field :password, :class => 'required' %>
		  </div>
		  <div class="field">
		  	<% if devise_mapping.rememberable? -%>
			    <%= f.check_box :remember_me %> <%= f.label '记住我？' %>
			  <% end -%>
		  </div>
		  <div class="actions">
		  	<%= f.submit "欢迎回来，登录！" %>
			还没注册？现在 <%= link_to "注册", new_registration_path(resource_name) %>
		  </div>
		<% end %>
	</div>
</div>